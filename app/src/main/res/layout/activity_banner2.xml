<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ISHello.Banner2.SuperSwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.youth.banner.Banner
            android:id="@+id/banner2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:delay_time="2000"
            app:indicator_drawable_selected="@drawable/banner_selected_radius"
            app:indicator_drawable_unselected="@drawable/banner_unselected_radius"
            app:indicator_height="6dp"
            app:indicator_width="6dp"></com.youth.banner.Banner>

    </com.ISHello.Banner2.SuperSwipeRefreshLayout>

</LinearLayout>