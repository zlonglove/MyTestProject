<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_shape_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_warning_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/tip"
        android:textColor="#333333"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e43943" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_warning_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/dialog_do_not_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_warning_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:textColor="#333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#e43943" />

    <LinearLayout
        android:id="@+id/ll_dialog_bottom_button"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/single_button_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e43943" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/single_button_selector"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="#e43943"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_I_know"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/single_button_selector"
        android:gravity="center"
        android:textColor="#e43943"
        android:textSize="15sp"
        android:visibility="gone" />

</LinearLayout>