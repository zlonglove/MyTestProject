<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="1px"

        />

    <im.icbc.com.imageeditor.CustomSurfaceView
        android:id="@+id/surfce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"></LinearLayout>

        <ImageView
            android:id="@+id/showbitmap"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#40000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:background="#40000000"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="矩形" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="圆" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="箭头" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="铅笔" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="A" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="擦除" />

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="展示" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bianji"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#40000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bianjia_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:padding="10dp"
            android:src="@drawable/rect" />

        <ImageView
            android:id="@+id/bianjia_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:padding="10dp"
            android:src="@drawable/circle_img" />

        <ImageView
            android:id="@+id/bianjia_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"

            android:background="#ffffff"
            android:padding="10dp"
            android:src="@drawable/jiantou" />

        <ImageView
            android:id="@+id/bianjia_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"

            android:background="#ffffff"
            android:padding="10dp"
            android:src="@drawable/qianbi" />

        <ImageView
            android:id="@+id/bianjia_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:padding="10dp"
            android:src="@drawable/a" />

        <ImageView
            android:id="@+id/bianjia_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:padding="10dp"
            android:src="@drawable/xiangpi" />

        <LinearLayout
            android:id="@+id/bianjia_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/jianpan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="展示"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
