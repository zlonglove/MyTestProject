<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270.0" android:endColor="@color/base_end_color_pressed" android:startColor="@color/base_start_color_pressed" />
            <corners android:radius="0.0dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270.0" android:endColor="@color/base_end_color_default" android:startColor="@color/base_start_color_default" />
                    <corners android:bottomLeftRadius="0.0dp" android:bottomRightRadius="0.0dp" android:topLeftRadius="0.0dp" android:topRightRadius="0.0dp" />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="-1dp" android:right="-1dp" android:top="0dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/rounded_container_border" />
                    <solid android:color="#00000000" />
                    <corners android:bottomLeftRadius="0.0dp" android:bottomRightRadius="0.0dp" android:topLeftRadius="0.0dp" android:topRightRadius="0.0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>