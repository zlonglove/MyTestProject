<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="2px"
        android:top="2px"
        android:right="2px"
        android:bottom="2px">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />

            <gradient
                android:angle="90"
                android:endColor="#BF59ACFF"
                android:startColor="#FF006FDD" />
        </shape>
    </item>
    <item
        android:bottom="1.5dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />

            <solid android:color="#56A6F5" />
        </shape>
    </item>

</layer-list>